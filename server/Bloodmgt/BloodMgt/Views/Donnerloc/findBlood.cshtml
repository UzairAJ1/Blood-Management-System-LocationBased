@model BloodMgt.Models.Donnerlocation

@{
    ViewData["Title"] = "findBlood";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="findBloodList">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="bg" class="control-label"></label>
                <input asp-for="bg" class="form-control" />
                <span asp-validation-for="bg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>

