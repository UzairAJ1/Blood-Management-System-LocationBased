@model IEnumerable<BloodMgt.Models.News>
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card card-secondary">
    <div class="card-header border-transparent">
        <h3 class="card-title">News Form</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">

        <div class="row">
            <div class="col-md-4">
                <form asp-action="NewsCreator" asp-controller="Blog">

                    <div class="card-body">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" class="form-control" id="txtitle" placeholder="Enter Title">
                      
                        
                        </div>
                        
                        <div class="form-group">
                            <select class="form-control" id="txcity">
                                <option>Wah</option>
                                <option>Taxila</option>
                             
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="msg">Title</label>
                            <input type="text" class="form-control" id="txtmsg" placeholder="Enter News">

                        </div>



                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary" value="submit">Submit</button>
                    </div>
                </form>
            </div>
            <div class="col-md-8">
            </div>
        </div>
    </div>
    <div class="text-center">
        <form asp-controller="Uat" asp-action="Index" method="post" enctype="multipart/form-data">
            <input type="file" name="file" />
            <input type="submit" value="Upload" />
        </form>
    </div>

