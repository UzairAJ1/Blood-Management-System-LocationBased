@model IEnumerable<BloodMgt.Models.Donner>

@{
    ViewData["Title"] = "Index";
}

<div class="card card-secondary">
    <div class="card-header border-transparent">
        <h3 class="card-title">Donners</h3>
        <div class="ribbon-wrapper">
            <div class="ribbon bg-primary">
                Donners
            </div>
        </div>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    </div>

<div class="card">
    <div class="card-header border-0">
        <h3 class="card-title">Donnation List</h3>
        <img src="~/bg/hhh.jpg" alt="Product 1" class="img-circle img-size-32 mr-2">
        <div class="card-tools">
            <a href="#" class="btn btn-tool btn-sm">
                <i class="fas fa-download"></i>
                <a href="javascript:void(0)" class="btn btn-sm btn-info float-left">New Donner</a>
            </a>
            <a href="#" class="btn btn-tool btn-sm">
                <a asp-action="Create">Create New</a>
                <i class="fas fa-bars"></i>
            </a>
        </div>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table table-striped table-valign-middle">
            <thead>
                <tr>
                    

                    <th>Name</th>
                    <th>Blood Group</th>
                    <th>City</th>
                    <th>Conact No</th>
                    <th>Email</th>
                    <th>Gender</th>
                    
                    <th>Age</th>
                    <th>More</th>
                </tr>
            </thead>

            <tbody>
  @foreach (var item in Model)
         {
                    <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.bloodgroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.city)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.contactno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
          
            <td>
                <a asp-action="Edit" asp-route-id="@item.donnerid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.donnerid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.donnerid">Delete</a>
            </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>