@model IEnumerable<BloodMgt.Models.Bloodrequest>

@{
    ViewData["Title"] = "Index";
}



<div class="card">
    <div class="card-header border-0">
        <h3 class="card-title">Donnation Requests</h3>
        <img src="~/bg/hhh.jpg" alt="Product 1" class="img-circle img-size-32 mr-2">
        <div class="card-tools">
            <a href="#" class="btn btn-tool btn-sm">
                <i class="fas fa-download"></i>
                <a href="javascript:void(0)" class="btn btn-sm btn-info float-left">New Donner</a>
            </a>
            <a href="#" class="btn btn-tool btn-sm">
                <a asp-action="Create">Create New</a>
                <i class="fas fa-bars"></i>
            </a>
        </div>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table table-striped table-valign-middle">
            <thead>
                <tr>
                    <th>id</th>

                    <th>Name</th>
                    <th>Blood Group</th>
                    <th>City</th>
                    <th>Conact No</th>
                    <th>Email</th>
                    <th>Unit</th>
                    <th>Status</th>
                    <th>More</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>@item.requstid</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.bloodgroup)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.city)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.contactno)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.unit)
                        </td>
                        <td>

                            @Html.DisplayFor(modelItem => item.active)
                        </td>
                        <td>
                            <a href="#" class="text-muted">
                                <i class="fas fa-search"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.requstid">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.requstid">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.requstid">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>