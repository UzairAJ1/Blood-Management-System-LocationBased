@model BloodMgt.Models.Users

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<section class="h-100 gradient-form" style="background-color: #fff;">
    <div class="container py-5 h-100">
       
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">
                                <div class="ribbon-wrapper">
                        <div class="ribbon bg-primary">
                          Login
                        </div>
                      </div>
                                <div class="text-center">
                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                                         style="width: 185px;" alt="logo">
                                    <h4 class="mt-1 mb-5 pb-1">We are the Hitech Team</h4>@ViewBag.name
                                </div>


                                <form asp-action="UserLogin" method="post">

                                    <div class="form-outline mb-4">
                                        <div class="form-group">
                                            <label class="control-label">Email</label>
                                            <input type="email" asp-for="uemail" class="form-control" />
                                            <span asp-validation-for="uemail" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <div class="form-group">
                                            <label class="control-label">Password</label>
                                            <input type="password" asp-for="pass" class="form-control" />
                                            <span asp-validation-for="pass" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="d-flex align-items-center justify-content-center pb-4">

                                            <input type="submit" value="Login" class=" btn-outline-danger" />
                                        </div>

                                    </div>

                                </form>
                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <div class="ribbon-wrapper">
                                    <div class="ribbon bg-danger">
                                        Objective
                                    </div>
                                </div>
                                <h4 class="mb-4">We are more than just a company</h4>
                                <p class="small mb-0">
                                    Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                                    tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
                                    exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
