@model IEnumerable<BloodMgt.Models.UserComments>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.city)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.msg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.postdate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.city)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.msg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.postdate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.commentsid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.commentsid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.commentsid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
