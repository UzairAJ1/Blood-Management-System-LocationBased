@{
    ViewData["Title"] = "Home Page";
}
<!-- Content Wrapper. Contains page content -->
<!-- Content Header (Page header) -->

<!-- /.content-header -->
<!-- Main content -->
@ViewBag.email
<section class="content">
    <div class="container-fluid">
        <!-- Info boxes -->
      
        <div class="row">
            <div class="col-12 col-sm-6 col-md-3">

                <div class="info-box">

                    <div class="info-box-content">
                        <span class="info-box-text">
                            Blood Donner::

                            <small>@ViewBag.Donners</small>
                        </span>
                        <img src="/bg/hhh.jpg" alt="Product 1" class="img-circle img-size-32 mr-2">
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box mb-3">

                    <div class="info-box-content">
                        <span class="info-box-text">
                            Blood Transfusion'::
                            <small>@ViewBag.tran</small>
                        </span>
                        <img src="/bg/hhh.jpg" alt="Product 1" class="img-circle img-size-32 mr-2">

                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <!-- fix for small devices only -->
            <div class="clearfix hidden-md-up"></div>

            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box mb-3">

                    <div class="info-box-content">
                        <span class="info-box-text">
                            Donnation::
                            <small>@ViewBag.donation</small>
                        </span>
                        <img src="/bg/hhh.jpg" alt="Product 1" class="img-circle img-size-32 mr-2">

                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box mb-3">

                    <div class="info-box-content">
                        <span class="info-box-text">
                            Active Request::
                            <small>@ViewBag.Request</small>
                        </span>
                        <img src="/bg/hhh.jpg" alt="Product 1" class="img-circle img-size-32 mr-2">

                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                      <div class="ribbon-wrapper">
                        <div class="ribbon bg-primary">
                          Status
                        </div>
                      </div>
                    <div class="card-header">
                        <h5 class="card-title">Blood Status Report</h5>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <div class="btn-group">
                                <button type="button" class="btn btn-tool dropdown-toggle" data-toggle="dropdown">
                                    <i class="fas fa-wrench"></i>
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" role="menu">
                                    <a href="#" class="dropdown-item">Action</a>
                                    <a href="#" class="dropdown-item">Another action</a>
                                    <a href="#" class="dropdown-item">Something else here</a>
                                    <a class="dropdown-divider"></a>
                                    <a href="#" class="dropdown-item">Separated link</a>
                                </div>
                            </div>
                            <button type="button" class="btn btn-tool" data-card-widget="remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8">
                                <br />
                                <div class="row">
                                    <div class="col-md-3">
                                        <!-- DIRECT CHAT PRIMARY -->
                                        <div class="card card-primary card-outline direct-chat direct-chat-primary">
                                            <div class="card-header">
                                                <h3 class="card-title">A+</h3>

                                                <div class="card-tools">
                                                    <span title="3 New Messages" class="badge bg-primary">@ViewBag.Ap</span>
                                                    <img src="~/bg/hhh.jpg" alt="Product 1" class="img-circle img-size-32 mr-2">

                                                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </div>
                                            </div>
                                            <!-- /.card-header -->

                                        </div>
                                        <!--/.direct-chat -->
                                    </div>
                                    <!-- /.col -->

                                    <div class="col-md-3">
                                        <!-- DIRECT CHAT SUCCESS -->
                                        <div class="card card-success card-outline direct-chat direct-chat-success">
                                            <div class="card-header">
                                                <h3 class="card-title">A-</h3>

                                                <div class="card-tools">
                                                    <span title="3 New Messages" class="badge bg-success">@ViewBag.An</span>

                                                    <img src="~/bg/hhh.jpg" alt="Product 1" class="img-circle img-size-32 mr-2">


                                                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </div>
                                            </div>

                                        </div>
                                        <!--/.direct-chat -->
                                    </div>
                                    <!-- /.col -->

                                    <div class="col-md-3">
                                        <!-- DIRECT CHAT WARNING -->
                                        <div class="card card-warning card-outline direct-chat direct-chat-warning">
                                            <div class="card-header">
                                                <h3 class="card-title">B+</h3>

                                                <div class="card-tools">
                                                    <span title="3 New Messages" class="badge bg-danger">@ViewBag.Bp</span>
                                                    <img src="~/bg/hhh.jpg" alt="Product 1" class="img-circle img-size-32 mr-2">

                                                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </div>
                                            </div>
                                            <!-- /.card-header -->
                                            <!-- /.card-footer-->
                                        </div>
                                        <!--/.direct-chat -->
                                    </div>
                                    <!-- /.col -->



                                    <div class="col-md-3">
                                        <!-- DIRECT CHAT DANGER -->
                                        <div class="card card-danger direct-chat direct-chat-danger">
                                            <div class="card-header">
                                                <h3 class="card-title">B-</h3>

                                                <div class="card-tools">
                                                    <span title="3 New Messages" class="badge">3</span>
                                                    <img src="~/bg/hhh.jpg" alt="Product 1" class="img-circle img-size-32 mr-2">

                                                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </div>
                                            </div>
                                            <!-- /.card-header -->

                                        </div>
                                        <!--/.direct-chat -->
                                    </div>
                                    <div class="col-md-3">
                                        <!-- DIRECT CHAT PRIMARY -->
                                        <div class="card card-primary card-outline direct-chat direct-chat-primary">
                                            <div class="card-header">
                                                <h3 class="card-title">AB+</h3>

                                                <div class="card-tools">
                                                    <span title="3 New Messages" class="badge bg-primary">3</span>
                                                    <img src="~/bg/hhh.jpg" alt="Product 1" class="img-circle img-size-32 mr-2">

                                                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </div>
                                            </div>
                                            <!-- /.card-header -->

                                        </div>
                                        <!--/.direct-chat -->
                                    </div>
                                    <!-- /.col -->

                                    <div class="col-md-3">
                                        <!-- DIRECT CHAT SUCCESS -->
                                        <div class="card card-success card-outline direct-chat direct-chat-success">
                                            <div class="card-header">
                                                <h3 class="card-title">AB-</h3>

                                                <div class="card-tools">
                                                    <span title="3 New Messages" class="badge bg-success">@ViewBag.Abn</span>

                                                    <img src="~/bg/hhh.jpg" alt="Product 1" class="img-circle img-size-32 mr-2">


                                                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </div>
                                            </div>

                                        </div>
                                        <!--/.direct-chat -->
                                    </div>
                                    <!-- /.col -->

                                    <div class="col-md-3">
                                        <!-- DIRECT CHAT WARNING -->
                                        <div class="card card-danger card-outline direct-chat direct-chat-danger">
                                            <div class="card-header">
                                                <h3 class="card-title">O+</h3>

                                                <div class="card-tools">
                                                    <span title="3 New Messages" class="badge bg-danger">3</span>
                                                    <img src="~/bg/hhh.jpg" alt="Product 1" class="img-circle img-size-32 mr-2">

                                                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </div>
                                            </div>
                                            <!-- /.card-header -->
                                            <!-- /.card-footer-->
                                        </div>
                                        <!--/.direct-chat -->
                                    </div>
                                    <!-- /.col -->

                                    <div class="col-md-3">
                                        <!-- DIRECT CHAT DANGER -->
                                        <div class="card card-danger direct-chat direct-chat-danger">
                                            <div class="card-header">
                                                <h3 class="card-title">O-</h3>

                                                <div class="card-tools">
                                                    <span title="3 New Messages" class="badge">3</span>
                                                    <img src="~/bg/hhh.jpg" alt="Product 1" class="img-circle img-size-32 mr-2">

                                                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </div>
                                            </div>
                                            <!-- /.card-header -->

                                        </div>
                                        <!--/.direct-chat -->
                                    </div>
                                </div>
                            </div>
                            <!-- /.col -->
                            <div class="col-md-4">
                                <p class="text-center">
                                    <strong>Goal Completion</strong>
                                </p>

                                <div class="progress-group">
                                    Blood Unit Added
                                    <span class="float-right"><b>480</b>/700 donners</span>
                                    <div class="progress progress-sm">
                                        <div class="progress-bar bg-primary" style="width: 80%"></div>
                                    </div>
                                </div>
                                <!-- /.progress-group -->

                                <div class="progress-group">
                                    Shortage
                                    <span class="float-right"><b>20</b>/500</span>
                                    <div class="progress progress-sm">
                                        <div class="progress-bar bg-danger" style="width: 75%"></div>
                                    </div>
                                </div>

                                <!-- /.progress-group -->
                                <div class="progress-group">
                                    <span class="progress-text">Completed</span>
                                    <span class="float-right"><b>480</b>/500</span>
                                    <div class="progress progress-sm">
                                        <div class="progress-bar bg-success" style="width: 60%"></div>
                                    </div>
                                </div>

                                <!-- /.progress-group -->
                                <div class="progress-group">
                                    Send Inquiries
                                    <span class="float-right"><b>500</b>/500</span>
                                    <div class="progress progress-sm">
                                        <div class="progress-bar bg-warning" style="width: 50%"></div>
                                    </div>
                                </div>
                                <!-- /.progress-group -->
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- ./card-body -->
                    <!-- /.card-footer -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!--/. container-fluid -->
</section>

<!-- /.content -->
<!-- /.content-wrapper -->
