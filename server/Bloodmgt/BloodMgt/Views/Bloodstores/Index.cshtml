@model IEnumerable<BloodMgt.Models.Bloodstore>

@{
    ViewData["Title"] = "Index";
}


<div class="card card-secondary">
    <div class="card-header border-transparent">
        <h3 class="card-title">Store Status</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>

    </div>

    <div class="card">
        <div class="card-header border-0">
            <h3 class="card-title">Donnation Store </h3>
            <img src="~/bg/hhh.jpg" alt="Product 1" class="img-circle img-size-32 mr-2">
            <div class="card-tools">
                <a href="#" class="btn btn-tool btn-sm">
                    <i class="fas fa-download"></i>
                </a>
            <a class="btn btn-sm btn-info float-left" asp-action="Create">New Donner</a>

                <a href="#" class="btn btn-tool btn-sm">
                    <a asp-action="Create">Create New</a>
                    <i class="fas fa-bars"></i>
                </a>
            </div>
        </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table m-0">
                <thead>
                    <tr>
                        <th>ID</th>

                        <th>bloodgroup</th>
                        <th>Unit</th>
                        <th>bloodbank</th>
                      
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model)
                    {
                        <tr>
                            <td>@d.bgid</td>
                            <td>@d.bloodgroup</td>
                            <td><span class="badge badge-success">@d.unit</span></td>
                            <td><span class="badge badge-success">@d.bloodbank</span></td>

                            <td>
                                <i class="nav-icon fas fa-th " id="btn12" onclick="Showmodal()">+</i>

                                <i class="fas fa-edit">Edit</i>
                                <i class="fas fa-trash">Del</i>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer clearfix">
        <a class="btn btn-sm btn-info float-left" asp-action="Create">
            <i class="fas fa-plus"><span>Add </span></i>
        </a>
        <a href="javascript:void(0)" class="btn btn-sm btn-secondary float-right">View All Orders</a>
    </div>
    <!-- /.card-footer -->
</div>

<div class="modal fade" id="modalEmployee" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">


    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Test</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="mb-3">
                    <label class="form-label">Test name</label>
                    <input type="text" class="form-control" id="txtName" autocomplete="off">
                </div>

                <div class="mb-3">
                    <label class="form-label">Department</label>
                    <select class="form-select" id="cboDepartment"></select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Test</label>
                    <input type="text" class="form-control" id="txttest">
                </div>

                <div class="mb-3">
                    <label class="form-label">Hire Date</label>
                    <input type="text" class="form-control" id="txtHireDate">
                </div>

            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>

        $('#btn1').click(function () {
            $('#modalEmployee').modal('show');
        })

        function Showmodal() {
            $('#modalEmployee').modal('show');
        }
    </script>
}
